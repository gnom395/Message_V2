# Ставим копозер https://getcomposer.org/download/
 запускаем этот текст в консоли

php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
php -r "if (hash_file('sha384', 'composer-setup.php') === '906a84df04cea2aa72f40b5f787e49f22d4c2f19492ac310e8cba5b96ac8b64115ac402c8cd292b8a03482574915d1a8') { echo 'Installer verified'; } else { echo 'Installer corrupt'; unlink('composer-setup.php'); } echo PHP_EOL;"
php composer-setup.php
php -r "unlink('composer-setup.php');"

# создаем проект

php composer.phar create-project laravel/laravel example-app
cd ./example-app
php artisan serv --host=0.0.0.0


установка нодеjs
npm i

php ../composer.phar require laravel/ui
npm install axios
php artisan ui vue
npm install && npm run dev

npm install vuetify





# для скриптов
npm run watch


npm i vue-router
vue add vuetify

# это установки laravel
php composer.phar composer global require laravel/installer
php composer.phar global require laravel/installer
php composer.phar laravel new example-app

#Локальный сервер
php artisan serv --host=0.0.0.0
